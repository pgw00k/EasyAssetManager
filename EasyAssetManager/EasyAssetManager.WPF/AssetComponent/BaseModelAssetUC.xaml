<local:BaseModelAssetUI x:Class="EasyAssetManager.WPF.AssetComponent.BaseModelAssetUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyAssetManager.WPF.AssetComponent"
             xmlns:common="clr-namespace:EasyAssetManager.WPF.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0,5,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="0,0,5,0">Model File</TextBlock>
            <common:FileSelector x:Name="FSTargetFile"></common:FileSelector>
        </StackPanel>

        <TreeViewItem Name="TVTextureDict" Grid.Row="1">
            <TreeViewItem.Header>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,0,5,0">Texture Dict</TextBlock>
                    <Button Click="BtnAddClick">ADD</Button>
                </StackPanel>
            </TreeViewItem.Header>
        </TreeViewItem>

    </Grid>
</local:BaseModelAssetUI>
